apiVersion: apps/v1
kind: Deployment
metadata:
  name: agent-2 
  namespace: ollama
  labels:
    app: ollama
    version: v1.0.2
spec:
  replicas: 1 # Start with 2 replicas for scalability
  selector:
    matchLabels:
      app: agent-2
  template:
    metadata:
      labels:
        app: agent-2
        version: v1.0.9
    spec:
      containers:
      - name: agent-2
        image: chifamba/agent-2:v1.0.9 # Replace with your image name
        ports:
        - containerPort: 8000
          name: http
          protocol: TCP
        resources:          # Add resource requests and limits
          requests:
            cpu: 100m
            memory: 256Mi
          limits:
            cpu: 1000m
            memory: 1Gi
        volumeMounts:
        - name: logs-volume
          mountPath: /logs
      volumes:
      - name: logs-volume
        emptyDir: {} # Use emptyDir for simplicity, consider PersistentVolumes for production